<script>

    eliminarCliente = (id) => {

  Swal.fire({
      title: 'Eliminar Registro?',
      text: "No Podrás Revertir Esto!",
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#3085d6',
      cancelButtonColor: '#d33',
      confirmButtonText: 'Aceptar'
    }).then((result) => {
      if (result.isConfirmed) {

                window.location = '/Cliente/Delete/' +id;
      }
    })
}
</script>