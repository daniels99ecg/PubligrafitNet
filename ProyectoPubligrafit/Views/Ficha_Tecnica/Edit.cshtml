@model ProyectoPubligrafit.Models.Ficha_Tecnica

<link rel="stylesheet" href="../../css/style.css">
<script src="/validar/validarPF.js"></script>

<div class="card" style="width: 65%;">

    <div class="card-body">
        <form asp-action="Edit" method="post" id="ficha_tecnica">

            <input type="hidden" asp-for="id_ft"></input>
            <center>
                <svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" fill="currentColor" class="bi bi-clipboard2-fill" viewBox="0 0 16 16">
                    <path d="M9.5 0a.5.5 0 0 1 .5.5.5.5 0 0 0 .5.5.5.5 0 0 1 .5.5V2a.5.5 0 0 1-.5.5h-5A.5.5 0 0 1 5 2v-.5a.5.5 0 0 1 .5-.5.5.5 0 0 0 .5-.5.5.5 0 0 1 .5-.5h3Z" />
                    <path d="M3.5 1h.585A1.498 1.498 0 0 0 4 1.5V2a1.5 1.5 0 0 0 1.5 1.5h5A1.5 1.5 0 0 0 12 2v-.5c0-.175-.03-.344-.085-.5h.585A1.5 1.5 0 0 1 14 2.5v12a1.5 1.5 0 0 1-1.5 1.5h-9A1.5 1.5 0 0 1 2 14.5v-12A1.5 1.5 0 0 1 3.5 1Z" />
                </svg>
            </center>
            <div style="margin-left: 5%;">





                <div class="form-row">

                    <div class="col-xs-4" style="width: 27%;">

                        <label for="">Insumo(*)</label>
                        <select id="insumo" asp-for="fk_insumo" class="form-control">

                            <option value="1">Vinilo</option>
                            <option value="2">Vinilo2</option>

                        </select>



                    </div>

                    <div class="col-xs-4">
                        <label for="inputEmail4" class="form-label">Cantidad del insumo(*)</label>

                        <input type="number" asp-for="cantidad_insumo" class="form-control" placeholder="Cantidad Insumo" aria-label="Last name" id="cantidad_insumo" name="cantidad_insumo">
                    </div>
                </div>


                <div class="form-row">


                    <div class="col-xs-4" style="width: 27%; ">
                        <label for="inputEmail4" class="form-label">costo del insumo(*)</label>

                        <input type="number" asp-for="costo_insumo" class="form-control" placeholder="Costo del Insumo" aria-label="Last name" id="costo_insumo" name="costo_insumo">


                    </div>


                    <div class="form-group" style="width: 250px" ;>
                        <label for="inputEmail4" class="form-label"></label>
                        <label for="inputEmail4" class="form-label">costo final del producto(*)</label>

                        <input type="number" asp-for="costo_final_producto" class="form-control" placeholder="Costo Final del Producto" aria-label="Last name" id="costo_final_producto" name="costo_final_producto">
                    </div>
                </div>
            </div>

            <center>
                <div class="md-form" style="width: 35%;">
                    <label for="form7">Detalles</label>
                    <textarea id="detalle" asp-for="detalle" name="detalle" class="md-textarea form-control" rows="" style=" border: 1px solid black;"></textarea>
                </div>
            </center>
            <div class="col-12 row mr-5">
                <button type="button" class="btn btn-primary mr-5" onclick="validarFicha()">Actualizar</button>
                <a href="/ficha_tecnica"><button type="button" class="btn btn-danger ">Cancelar</button></a>
            </div>
        </form>
    </div>



</div>


<!-- ! Footer -->
