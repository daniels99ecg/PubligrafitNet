@model ProyectoPubligrafit.Models.Insumos
<link rel="stylesheet" href="../../css/style.css">

    <script src="../validar/validarI.js"></script>
   

  

   
    <div class="card" style="width: 63%;">
    <form asp-action="CreateA" method="post" id="formulario">
      <div class="card-body">
     
      <div class="text-center">
      <img class="img-fluid ml-5" src=https://dimidium.com.ec/wp-content/uploads/2020/06/INSUMOS.png alt="">
    </div>
    <div class="form-row" style="margin-left: 30%;">
        <div class="col-xs-4" style="width:40%;">
          <label for="inputEmail4" class="form-label" >Nombre del insumo(*)</label>
  
          <input type="text" asp-for="nombre" class="form-control" placeholder="Nombre del insumo" aria-label="First name" id="nombre" name="nombre">
        </div>
            </div>
    </div>
       
  
      <div class="form-row">
        <div class="col-xs-4">
          <label for="inputEmail4" class="form-label">Cantidad del insumo(*)</label>
  
          <input type="number" asp-for="cantidad" class="form-control" placeholder="Cantidad del insumo" aria-label="First name" id="cantidad" name="cantidad">
        </div>
        <div class="col-xs-4">
          <label for="inputEmail4" class="form-label">precio del insumo(*)</label>
  
          <input type="number" asp-for="precio" class="form-control" placeholder="Precio del insumo" aria-label="First name" id="precio" name="precio">
        </div>
  
      </div>
    <div class="col-12 row mr-5">
      <button type="button" class="btn btn-primary mr-5" onclick="validarInsumos()">Registrar</button>
      <a href="/insumos"><button type="button" class="btn btn-danger " >Cancelar</button></a>
    </div>
  </form>
</div>
  

 

